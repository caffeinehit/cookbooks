# Upstart script for <%= @resource.name %>

start on runlevel [2345]
stop on runlevel [!2345]

respawn

pre-start script

mkdir -p /var/log/<%= @resource.user %>
chown -R  <%= @resource.user %> /var/log/<%= @resource.user %>

end script

exec su - <%= @resource.user %> -c "<%= @resource.command %> >> /var/log/<%= @resource.user %>/<%= @resource.name %>.log 2>&1"

